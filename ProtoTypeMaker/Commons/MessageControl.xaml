	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="ProtoTypeMaker.MessageControl"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480">

	<Grid x:Name="LayoutRoot" Background="#FF8B8B8B" Opacity="0.5">
		<TextBox x:Name="txt_Message" TextWrapping="Wrap" Margin="20" FontSize="26.667"/>
	</Grid>
</UserControl>